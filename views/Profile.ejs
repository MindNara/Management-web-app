<div class="level-item mt-4">
    <div class="is-flex is-align-items-center" style="position: relative;">
        <span class="name-member has-text-black is-size-5-fullhd ">Hi, <%= user.username %></span>
        <div class="profile-box tabs has-background-black mx-5">
            <a class="dropbtn" style="width: 100%;" onclick="showDropdown()"></a>
        </div>
    </div>

    <div id="profileDropdown" class="tab-profile profile has-background-white px-5 py-2">
        <a class="has-text-black" onclick="showProfile()">Profile</a>
    </div>

    <!-- modal-add-task -->
    <div class="modal model-profile">
        <div class="modal-background"></div>
        <div class="modal-card" style="width: 30rem;">
            <header class="modal-card-head">
                <p class="modal-card-title has-text-weight-semibold">MY PROFILE</p>
                <button class="delete btnDelete" aria-label="close"></button>
            </header>
            <section class="modal-card-body px-5">
                <form id="form">
                    <div class="field is-flex is-align-items-center">
                        <div class="img-profile has-background-black mr-5"></div>
                        <div class="is-flex is-flex-direction-column has-text-black" style="width: 61%;">
                            <label class="is-size-6">Username</label>
                            <span class="has-text-weight-medium is-flex is-align-items-center level">
                                <label class="is-size-4 has-text-weight-medium level-left">
                                    <%= user.username %>
                                </label>
                            </span>
                        </div>
                    </div>
                    <div class="field mt-3">
                        <div class="is-flex is-flex-direction-column has-text-black">
                            <label class="mb-1">First name</label>
                            <span
                                class="user-card px-4 py-3 has-text-weight-medium is-flex is-align-items-center level">
                                <label class="level-left">
                                    <%= user.fname %>
                                </label>
                                <a href="#" class="level-right">
                                    <i class="fas fa-pen is-size-7" style="color: rgb(109, 109, 109);"></i>
                                </a>
                            </span>
                        </div>
                    </div>
                    <div class="field mt-3">
                        <div class="is-flex is-flex-direction-column has-text-black">
                            <label class="mb-1">Last name</label>
                            <span
                                class="user-card px-4 py-3 has-text-weight-medium is-flex is-align-items-center level">
                                <label class="level-left">
                                    <%= user.lname %>
                                </label>
                                <a href="#" class="level-right">
                                    <i class="fas fa-pen is-size-7" style="color: rgb(109, 109, 109);"></i>
                                </a>
                            </span>
                        </div>
                    </div>
                    <div class="field mt-3">
                        <div class="is-flex is-flex-direction-column has-text-black">
                            <label class="mb-1">Email</label>
                            <span
                                class="user-card px-4 py-3 has-text-weight-medium is-flex is-align-items-center level">
                                <label class="level-left">
                                    <%= user.email %>
                                </label>
                                <a href="#" class="level-right">
                                    <i class="fas fa-pen is-size-7" style="color: rgb(109, 109, 109);"></i>
                                </a>
                            </span>
                        </div>
                    </div>
                    <div class="field mt-3">
                        <div class="is-flex is-flex-direction-column has-text-black">
                            <label class="mb-1">Password</label>
                            <span
                                class="user-card px-4 py-3 has-text-weight-medium is-flex is-align-items-center level">
                                <label class="level-left">
                                    <%= user.password %>
                                </label>
                                <a href="#" class="level-right">
                                    <i class="fas fa-pen is-size-7" style="color: rgb(109, 109, 109);"></i>
                                </a>
                            </span>
                        </div>
                    </div>
                </form>
            </section>
            <footer class="modal-card-foot">
                <button class="button is-black">Edit</button>
                <button class="button btnCancel">Cancel</button>
            </footer>
        </div>
    </div>
    <!-- modal-add-task -->
</div>